# Include the README and license files
include README.md
include LICENSE
include LEGAL.md

# Include the requirements file
include requirements.txt
include pyproject.toml

# Include configuration files
include .gitignore

# Include figures and documentation
recursive-include patchmoe/figures *.png *.jpg *.jpeg *.gif *.svg
recursive-include docs *.rst *.md *.txt *.py *.bat *.css *.js *.html

# Include test files
recursive-include tests *.py

# Include example scripts
recursive-include examples *.py *.sh *.md

# Exclude compiled Python files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dylib
global-exclude *.dll

# Exclude development and build artifacts
global-exclude .pytest_cache
global-exclude .coverage
global-exclude htmlcov
global-exclude .tox
global-exclude .mypy_cache
global-exclude build
global-exclude dist
global-exclude *.egg-info
